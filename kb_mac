	echo "Firing up some xterms..."
	xts
	banner "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

	banner "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
	echo "Firing up knowledge base and context files"
	_open_current_context;
	_open_KB_files
	banner "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"


	banner "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
	banner "ENJOY :-\)"
	banner "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
}

