__npmmv2dev__()
{
    if [ -z $1 ] 
        then
            echo "please provide module name"
            return  0
        fi
    echo "moving module $1 from prod to dev dependencies"
    npm i $1  -D
}

__npmmv2prod__()
{
    if [ -z $1 ] 
        then
            echo "please provide module name"
            return  0
        fi
    echo "moving module $1 from dev to prod dependencies"
    npm i module-example -P
}

